<Window x:Class="TfGuiTool.CheckinWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TfGuiTool"
        mc:Ignorable="d"
        Title="Check-in changes" Height="158" Width="303" ResizeMode="NoResize" Icon="/Resources/door.ico"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Label x:Name="labelComment" Content="Enter a check-in comment:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxComment" Margin="10,36,10,39" TextWrapping="Wrap" KeyUp="textBoxComment_KeyUp"/>
        <Button x:Name="buttonCheckin" Content="Check In" Margin="0,0,10,9" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="80" Click="buttonCheckin_Click"/>
        <Label x:Name="labelCheckinResult" Content="" Margin="10,0,95,8" Height="26" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="10"/>

    </Grid>
</Window>
